generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  firstName      String   @default("")
  lastName       String   @default("")
  phone          String   @default("")
  hashedPassword String   @default("")
  ownedBikes     Bike[]   @relation(name: "CreatedByUser")
  likedBikes     Bike[]   @relation(name: "liked")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("users")
}

model Bike {
  id             String       @id @default(uuid())
  model          String       @db.VarChar(255)
  manufacturer   Manufacturer
  color          String       @db.VarChar(50)
  engineCapacity Float
  horsePower     Float
  price          Prices[]
  year           Int
  used           Boolean
  img            String? // Optional
  description    String       @default("Random Description")
  ownerId        String
  owner          User         @relation(fields: [ownerId], references: [id], name: "CreatedByUser")
  location       String       @db.VarChar(100)
  likedByUsers   User[]       @relation(name: "liked")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  status         BikeStatus   @default(ACTIVE)

  @@map("bikes")
}

model Prices {
  id        String   @id @default(uuid())
  bike      Bike     @relation(fields: [bikeId], references: [id])
  bikeId    String
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BikeStatus {
  ACTIVE
  SOLD
  DRAFT
}

